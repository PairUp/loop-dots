#!/bin/sh

src_dir=`pwd`

if [ -d /usr/local/bin ]; then
    target_dir='/usr/local/bin'
elif [ -d /usr/bin ]; then
    target_dir='/usr/bin'
else
    echo "Can't install ..."
fi

if [ ! -w $target_dir ]; then
    echo "You don't have permission to install into $target_dir"
    exit
fi

cd $target_dir
rm -f ...
ln -s $src_dir/bin/...

echo "Installed. Symlinked $target_dir/... $src_dir/bin/..."
